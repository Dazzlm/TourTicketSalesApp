generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}

model Ticket {
  id        Int       @id @default(autoincrement())
  userId    Int
  tourId    Int
  quantity  Int
  total     Decimal   @db.Decimal(10, 2)
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  tour      Tour      @relation(fields: [tourId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_tour")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_user")
}

model Tour {
  id             Int       @id @default(autoincrement())
  title          String    @db.VarChar(150)
  description    String
  price          Decimal   @db.Decimal(10, 2)
  imageUrl       String
  capacity       Int
  availableSpots Int
  createdAt      DateTime? @default(now()) @db.Timestamp(6)
  updatedAt      DateTime? @default(now()) @db.Timestamp(6)
  ticket         Ticket[]
}

model User {
  id        Int       @id @default(autoincrement())
  cedula    String    @unique @db.VarChar(20)
  email     String    @unique @db.VarChar(100)
  name      String    @db.VarChar(100)
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  ticket    Ticket[]
}
